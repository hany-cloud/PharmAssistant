@model IEnumerable<PharmAssistant.Models.SalesItem>

@{
    ViewBag.Title = "Sales Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box box-body box-default">
    <table class="table table-striped table-responsive">
        <thead>
            <tr class="dataTableHead">
                <th>
                    @Html.DisplayNameFor(model => model.SalesID)
                </th>
                <th>
                    Stock ID : Item Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock.BatchNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Qty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockID) <text>&nbsp; : &nbsp;  </text> @Html.DisplayFor(modelItem => item.Stock.Item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock.BatchNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>

            </tr>
    }

    </table>
</div>
